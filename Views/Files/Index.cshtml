@{
    ViewData["Title"] = "Files Index";
    String[] files = ViewBag.Files as String[];
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<ul>
    @for (int i=0; i<files.Length; i++)
    {
        <li><a asp-controller="Files" asp-action="Content" asp-route-id="@i">@files[i].Remove(0,10)</a></li>
    }
</ul>
